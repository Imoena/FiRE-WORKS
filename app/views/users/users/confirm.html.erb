<h4>下書き一覧</h4>
<table class="table">
        <thead>
          <tr>
            <th></th>
            <th>大会名</th>
            <th>場所</th>
            <th>開催年月日</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= attachment_image_tag post, :image, format: 'jpeg', size:'60x60', fallback: "no-image.jpg" %></td>
              <td><%= post.festival %></td>
              <td><%= post.prefecture %><%= post.city %></td>
              <td><%= post.date %></td>
              <td><%= link_to "編集する", edit_post_path(post), class: "btn btn-outline-secondary btn-sm" %></td>
            </tr>
            <% end %>
        </tbody>
</table>