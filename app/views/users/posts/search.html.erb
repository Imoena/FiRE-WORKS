<p>検索結果</p>

<div class="row">
	<% @posts.each do |post| %>
	    <div class="col-xs-12 col-md-6 col-lg-4">
	        <table class="post-block">
	        	<tr>
					<th></th><td><%= link_to post_path(post) do %><%= attachment_image_tag post, :image, format: 'jpeg', size:'200x180', fallback: "no-image.jpg" %></td>
					<% end %>
				</tr>
				<tr>
					<th></th><td><%= post.festival %></td>
			    </tr>
				<tr>
					<th></th><td>
					  <%= post.prefecture %><%= post.city %>
			    </tr>
	        </table>
	    </div>
    <% end %>
</div>