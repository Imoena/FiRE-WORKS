<h1>ユーザー編集</h1>
<h4>名前</h4>
<%= form_for(@user) do |f| %>
<%= f.text_field :name %>
<h4>プロフィール画像</h4>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
<h4>自己紹介</h4>
<%= f.text_field :introduction %>
<%= f.submit 'Update User' %>
<% end %>
<%= link_to "パスワード変更", edit_user_registration_path(@user) %>
<%= link_to "退会する",users_cancel_path(@user)%>
