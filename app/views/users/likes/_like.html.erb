<script src="https://kit.fontawesome.com/17810510b7.js" crossorigin="anonymous"></script>

<div class="like-link" id="like-link-<%= post.id %>">
	
<% if user_signed_in? %>
  <% if current_user.likes.find_by(post_id: post.id) %>
    <%= link_to unlike_path(post.id), method: :delete, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i><%= post.likes.count%>
    <% end %>

  <% else %>
    <%= link_to like_path(post.id), method: :post, remote: true do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i><%= post.likes.count%>
    <% end %>
　<% end %>
<% else %>
  <% if post.likes.count >= 1 %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i><%= post.likes.count%>
  <% else %>
　  <i class="fa fa-heart-o" aria-hidden="true"></i><%= post.likes.count%>
  <% end %>
<% end %>
</div>