
<!------ お気に入り数ランキング ------>
<h4 class="top-index">お気に入りランキング</h4>
　  <div class="row">
    	<%= render partial: 'users/posts/index',locals: { posts: @posts } %>
    </div>

<!------ カレンダー ------>
<h4 class="top-index">カレンダーから探す</h4>
    <div class="row-xs-12">
        <div class="calendar col-xs-12">
          <%= month_calendar events: @events do |date, events| %>
    	      <%= date.day %>
    	      <% events.each do |event| %>
    		    <div>
    		      <%= link_to event.festival, event_path(event),class: "calendar-link-style", data: {"turbolinks" => false} %>
    		    </div>
              <% end %>
          <% end %>
        </div>
    </div>

