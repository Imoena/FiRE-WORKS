<!------ スライド ------>
<div class="top-slide-group">
  <div class="top-slide"><%= image_tag(asset_path('show1.jpg'), alt: "画像1", class: "top-image") %></div>
  <div class="top-slide"><%= image_tag(asset_path('show2.jpg'), alt: "画像1", class: "top-image") %></div>
  <div class="top-slide"><%= image_tag(asset_path('show3.jpg'), alt: "画像1", class: "top-image") %></div>
</div>

<script type="text/javascript">
 $(function() {
    $('.top-slide-group').slick({
        dots: true,
        autoplay: true,
        centerMode: true,
        centerPadding: '15%',
        autoplaySpeed: 3000,
        speed:1500,
    });
});
</script>

<!------ 都道府県別ランキング ------>
<% if user_signed_in? %>
<h4 class="top-index"><%= @user.prefecture %>のおすすめ</h4>
  <div class="row">
    <%= render partial: 'users/posts/index',locals: { posts: @user_prefecture_posts } %>
  </div>
  <% else %>
  <% end %>


<!------ お気に入り数ランキング ------>
<h4 class="top-index">お気に入りランキング</h4>
　<div class="row">
    <%= render partial: 'users/posts/index',locals: { posts: @posts } %>
  </div>

<!------ カレンダー ------>
<h4 class="top-index">カレンダーから探す</h4>
  <div id="calendar-anc">
     <div class="row-xs-12">
          <div class="calendar col-xs-12">
            <%= month_calendar events: @events do |date, events| %>
      	      <%= date.day %>
      	      <% events.each do |event| %>
      		    <div>
      		      <%= link_to event.festival, event_path(event),class: "calendar-link-style", data: {"turbolinks" => false} %>
      		    </div>
                <% end %>
            <% end %>
          </div>
      </div>
  </div>

