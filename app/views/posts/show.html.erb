<script src="https://kit.fontawesome.com/17810510b7.js" crossorigin="anonymous"></script>

<h4>花火大会名</h4>
  <%= @post.festival %>
<h4>評価：<%= @post.rate %>点</h4>

 <!--星評価-->
<div id="star-rate-<%= @post.id %>"></div>
<script>
 $('#star-rate-<%= @post.id %>').raty({
   size: 36,
   starOff:  '<%= asset_path('star-off.png') %>',
   starOn : '<%= asset_path('star-on.png') %>',
   starHalf: '<%= asset_path('star-half.png') %>',
   half: true,
   // 読み込み専用
   readOnly: true,
   score: <%= @post.rate %>});
</script>
<!---------->

<h4>都道府県名</h4>
  <%= @post.prefecture %>
<h4>市町村名</h4>
  <%= @post.city %>
<h4>感想</h4>
  <%= @post.impressions %>
<h4>画像</h4>
  <%= attachment_image_tag @post, :image, :fill, 60, 60, format: 'jpeg', size:'60x60' %>
<h4>交通手段</h4>
  <%= @post.transportation %>
<h4>持ち物</h4>
  <%= @post.belongings %>

<!-- 編集、削除 -->
<% if @post.user.id == current_user.id %>
     <%= link_to "編集", edit_post_path(@post)%>
     <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に消しますか?" %>
<% end %>

<!-- お気に入り -->
<%= render partial: 'likes/like',locals: { post: @post } %>


<!-- コメント -->
<h2>コメント一覧</h2>
<% @comments.each do |comment| %>
  <div>
    <%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, format: 'jpeg', size:'60x60' %>
    <%= comment.content %>
    <% if comment.user == current_user %>
    <%= link_to '削除する', post_comment_path(comment), method: :delete, remote: true %>
    <% end %>
  </div>
<% end %>
<h2>コメント投稿</h2>
<%= form_with model:[@post, @comment] do |f| %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>

<%= link_to "TOPへ戻る", root_path %>