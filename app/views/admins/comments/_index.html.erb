<!-- コメント一覧 -->
<div>コメント<%= comments.count %>件</div>
    <% comments.each do |comment| %>
      <div>
        <%= link_to user_path(comment.user) do %>
            <%= attachment_image_tag comment.user, :profile_image, format: 'jpeg', size:'50x50', fallback: "no-image.jpg", class: "img-circle" %>
            <%= comment.user.name %>
        <% end %>
        <%= comment.content %>
        <%= comment.created_at %>
        <%= link_to '削除する', admins_post_comment_path(comment.post_id, comment.id), method: :delete, remote: true,class: "btn btn-outline-secondary btn-sm"  %>
      </div>
    <% end %>
