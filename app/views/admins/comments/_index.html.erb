<!-- コメント一覧 -->
<% if user_signed_in? %>
    <div>コメント投稿</div>
    <%= form_with model:[post, comment], data: {remote: true} do |f| %>
    <%= f.text_field :content %>
    <%= f.hidden_field :post_id, value: post.id %>
    <%= f.submit '送信' %>
    <% end %>
    <% end %>
<div>コメント<%= comments.count %>件</div>
<% comments.each do |comment| %>
  <div>
    <%= link_to user_path(comment.user) do %>
    <%= attachment_image_tag comment.user, :profile_image, format: 'jpeg', size:'60x60' %>
    <%#= comment.user.name %>
    <% end %>
    <%= comment.content %>
    <%= comment.created_at %>
    <%= link_to '削除する', admins_post_comment_path(comment.post_id, comment.id), method: :delete, remote: true,class: "btn btn-outline-secondary btn-sm"  %>
  </div>
<% end %>
