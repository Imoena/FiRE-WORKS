<div class="row">

  <table class="table" style="table-layout:fixed;width:100%;">
      <thead>
        <tr>
          <th></th>
          <th>会員ID</th>
          <th>氏名</th>
          <th>自己紹介</th>
          <th>メールアドレス</th>
          <th>管理</th>
        </tr>
      </thead>
      <tbody>
        <tr>
        	<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size:'100x100', fallback: "no-image.jpg" %></td>
          <td><%= @user.id %></td>
          <td><%= @user.name %></td>
        	<td><%= @user.introduction %></td>
        	<td><%= @user.email %></td>
    			<td><button type="button" class="btn btn-outline-secondary btn-block"><%= link_to "プロフィール編集", edit_admins_user_path(@user) %></button><br>
    			<button type="button" class="btn btn-outline-secondary btn-block"><%= link_to "お気に入り一覧", like_admins_users_path %></button><br>
    			<button type="button" class="btn btn-outline-secondary btn-block"><%= link_to "下書き一覧", confirm_admins_users_path %></button>
          </td>
        </tr>
    　</tbody>
  </table>

  <div>投稿一覧</div>
  <% @posts.each do |post| %>
    <table class="table">
      <tbody>
              <tr>
                <td><%= link_to admins_post_path(post) do %><%= attachment_image_tag post, :image, format: 'jpeg', size:'100x100', fallback: "no-image.jpg" %></td>
                <% end %>
                <td> <%= post.festival %></td>

                <td><%= post.prefecture %><%= post.city %></td>
              </tr>
      </tbody>
    </table>
  <% end %>
</div>

