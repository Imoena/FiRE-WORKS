<div class="row">

	<div><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size:'100x100' %></div>
	<div><%= @user.introduction %></div>
	<!-- 今までの投稿で得た総いいいね数 -->
	<div><%= Like.where(post_id: @user.posts.ids).size %></div>

	<% if @user.id == current_user.id %>
	<%= link_to "プロフィール編集", edit_user_path(@user) %>
	<%= link_to "お気に入り一覧", like_users_path %>
	<%= link_to "下書き一覧", confirm_users_path %>
	<% end %>

</div>
	<div><%= @user.name %></div>

<div class="row">
	<% @posts.each do |post| %>
	    <div class="col-xs-12 col-md-6 col-lg-4">
	        <table class="post-block">
	        	<tr>
					<th></th><td><%= link_to post_path(post) do %><%= attachment_image_tag post, :image, format: 'jpeg', size:'200x200' %></td>
					<% end %>
				</tr>
				<tr>
					<th></th><td>
				<div id="star-rate-<%= post.id %>"></div>
				<script>
				 $('#star-rate-<%= post.id %>').raty({
				   size: 36,
				   starOff:  '<%= asset_path('star-off.png') %>',
				   starOn : '<%= asset_path('star-on.png') %>',
				   starHalf: '<%= asset_path('star-half.png') %>',
				   half: true,
				   // 読み込み専用
				   readOnly: true,
				   score: <%= post.rate %>});
				</script>
			    </td>
				<tr>
					<th></th><td><%= post.festival %></td>
			    </tr>
				<tr>
					<th></th><td>
					  <%= post.prefecture %><%= post.city %>
			    </tr>
	        </table>
	    </div>
    <% end %>
</div>