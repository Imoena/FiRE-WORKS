<div class="row">

  <table class="table" style="table-layout:fixed;width:100%;">
      <thead>
        <tr>
          <th></th>
          <th>会員ID</th>
          <th>氏名</th>
          <th>自己紹介</th>
          <th>メールアドレス</th>
          <th>管理</th>
        </tr>
      </thead>
      <tbody>
        <tr>
        	<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size:'100x100', fallback: "no-image.jpg" %></td>
          <td><%= @user.id %></td>
          <td><%= @user.name %></td>
        	<td><%= @user.introduction %></td>
        	<td><%= @user.email %></td>
    			<td><%= link_to "プロフィール編集", edit_admins_user_path(@user),class: "btn btn-outline-secondary " %><br>
              <% if @user.email == "test_user@com" %>
              <%= link_to "退会", admins_user_path(@user), id:"button4", class: "destroy-user btn btn-outline-danger" %>
                <script>
                  $('#button4').on('click', function() {
                      alert("テストユーザーは退会させられません");
                      });
                </script>
                <% else %>
              <%= link_to "退会", hide_admins_users_path(@user), class: "destroy-user btn btn-outline-danger",method: :put, data: {confirm: "本当に退会させますか？"}%></td>
              <% end %>
        </tr>
      </tbody>
  </table>

  <div>投稿一覧</div>
  <% @posts.each do |post| %>
    <table class="table">
      <tbody>
              <tr>
                <td><%= link_to admins_post_path(post) do %><%= attachment_image_tag post, :image, format: 'jpeg', size:'100x100', fallback: "no-image.jpg", class: "entire-link-style", data: {"turbolinks" => false} %></td>
                <% end %>
                <td> <%= post.festival %></td>

                <td><%= post.prefecture %><%= post.city %></td>
              </tr>
      </tbody>
    </table>
  <% end %>
</div>

