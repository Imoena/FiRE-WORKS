<%= form_for(@user) do |f| %>
  <div class="row">
	  <div class="col-lg-6">
	    <h4>ユーザー編集</h4>
		    <%= attachment_image_tag @user, :profile_image, fallback: "no-image.jpg", id: "img_prev", format: 'jpeg', size:'200x200' %>
		    <%= f.attachment_field :profile_image %>
	   </div>
	   <div class="col-lg-6">
	     <h5>名前</h5>
		    <%= f.text_field :name %>
		 <h5>お住まいの都道府県</h5>
		    <%= f.select :prefecture, User.prefectures.keys, {} %>
		 <h5>自己紹介</h5>
			<%= f.text_area :introduction, :size=>"20x5" %>
			<% if @user.email == "test_user@com" %>
			<%= link_to "編集する",edit_admins_user_path(@user), id:"button6", class: "btn btn-dark" %>
			<script>
				$('#button6').on('click', function() {
                alert("テストユーザーは編集できません");
                });
			</script>
			<% else %>
			<%= f.submit '編集する',class: "btn btn-dark" %>
			<% end %>
		 <div>
		 </div>
		</div>
    </div>
<% end %>