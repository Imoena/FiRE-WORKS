<!-- コメント一覧 -->
<h4>コメント<%= comments.count %>件</h4>
<% comments.each do |comment| %>
  <div>
    <%#= link_to user_path(comment.user) do %>
    <%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, format: 'jpeg', size:'60x60' %>
    <%#= comment.user.name %>
    <%# end %>
    <%= comment.content %>
    <%= comment.created_at %>
    <% if comment.user == current_user %>
    <%= link_to '削除する', post_comment_path(comment.post_id, comment.id), method: :delete, remote: true %>
    <% end %>
  </div>
<% end %>

<% if user_signed_in? %>
    <h4>コメント投稿</h4>
    <%= form_with model:[post, comment], data: {remote: true} do |f| %>
    <%= f.text_field :content %>
    <%#= f.hidden_field :post_id, value: post.id %>
    <%= f.submit '送信' %>
    <% end %>
    <% end %>